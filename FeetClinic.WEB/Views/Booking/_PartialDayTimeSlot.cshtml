@using BE.BE.Schedule
@model FeetClinic.WEB.Models.DayTimeSlotViewModel

<table class="table table-striped table-condensed table-bordered table-hover">
    @if (Model.Date != DateTime.MinValue)
    {
        <thead>
            <b>
                @Model.Date.ToString("dd.MM")
            </b>
        </thead>
    }
    <tbody>
     @if (Model.TimeSlots.Count > 0 && Model.Date > DateTime.Today)
     {
         <tr>
             <td class="success">
                 @foreach (var timeSlot in Model.TimeSlots)
                 {
                     <a href="javascript:void(0);" onclick="ChangeDateOgTime('@timeSlot.StartTime.ToString()', '@Model.Date.ToString("yyyy-MM-dd")');" style="color: black">@timeSlot.StartTime.ToString()</a>
                     <br />
                 }
             </td>

        </tr>
     }
     else
     {
              <tr>
                  <td>
                      Ingen<br/>
                      ledige<br/>
                      tider
                  </td>
              </tr>
          }
    </tbody>

</table>
