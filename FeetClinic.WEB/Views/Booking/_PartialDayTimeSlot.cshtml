@using BE.BE.Schedule
@model FeetClinic.WEB.Models.DayTimeSlotViewModel

<table class="table table-striped table-condensed table-bordered">
    @if (Model.Date != DateTime.MinValue)
    {
        <tr>
            <b>
            @Model.Date.ToString("dd.MM")    
            </b>
        </tr>
    }
    @if (Model.TimeSlots.Count > 0)
    {
        foreach (var timeSlot in Model.TimeSlots)
        {
            <tr>
                <td>
                  
                        @*<input type="submit"  value="@timeSlot.StartTime.ToString()" />*@
                    @timeSlot.StartTime.ToString()
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>
                Ingen<br />
                ledige<br />
                tider
            </td>
        </tr>
    }


</table>
