
<div>
    <table class="table table-striped table-condensed table-bordered">
        <thead>
        <tr class="text-center">
            <td></td>
            <td>Monday</td>
            <td>Tuesday</td>
            <td>Thursday</td>
            <td>Wednesday</td>
            <td>Friday</td>
            <td>Sunday</td>
            <td>Saturday</td>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>
                <label>Start:</label>
            </td>
            @for (int i = 0; i < 7; i++)
            {
                <td><input type="time" name="WorkingHourses.[@i].StartTime" value="07:00"/></td>
            }
        </tr>
        <tr>
            <td>
                <label>End:</label>
            </td>
            @for (int i = 0; i < 7; i++)
            {
                <td><input type="time" name="WorkingHourses.[@i].EndTime" value="15:00"/></td>
            }
        </tr>
        <tr>
            <td>
                <label>StartLunch:</label>
            </td>
            @for (int i = 0; i < 7; i++)
            {
                <td><input type="time" name="WorkingHourses.[@i].StartLunch" value="11:30"/></td>
            }
        </tr>
            <tr>
                <td>
                    <label>LunchDuration:</label>
                </td>
                @for (int i = 0; i < 7; i++)
                {
                    <td><input name="WorkingHourses.[@i].LunchDuration" type="text" value="00:30:00" /></td>
                }
            </tr>
        </tbody>
    </table>


</div>
