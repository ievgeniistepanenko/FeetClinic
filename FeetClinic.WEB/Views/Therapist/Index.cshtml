@model IEnumerable<BE.BE.Therapist>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3> Vores behandler</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">Navn</th>
                <th class="text-left">Beskrivelse</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var therapist in Model)
            {
                <tr>
                    <td class="text-left">@Html.ActionLink(therapist.Name, "Edit", new { therapist.Id })</td>
                    <td class="text-left"> @therapist.Description</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Therapist"))
                        {
                            @Html.Hidden("id", therapist.Id)
                            <input type="submit" class="btn btn-default btn-xs btn-danger" value="Slet" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add new", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>
